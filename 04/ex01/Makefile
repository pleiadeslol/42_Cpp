CXX= c++
CXXFLAGS= -Wall -Wextra -Werror -std=c++98
NAME= brain
SRC= main.cpp Animal.cpp Cat.cpp Dog.cpp WrongAnimal.cpp WrongCat.cpp Brain.cpp
HEADER= -I Animal.hpp -I Cat.hpp -I Dog.hpp -I WrongAnimal.hpp -I WrongCat.hpp -I Brain.hpp
OBJ= $(SRC:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJ)
	$(CXX) $(CXXFLAGS) $(OBJ) $(HEADER) -o $(NAME)

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all

.SECONDARY: $(OBJ)
.PHONY: all clean fclean re
