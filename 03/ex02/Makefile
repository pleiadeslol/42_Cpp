CXX= c++
CXXFLAGS= -Wall -Wextra -Werror -std=c++98
NAME= fragtrap
SRC= main.cpp ClapTrap.cpp ScavTrap.cpp  FragTrap.cpp
HEADER= -I ClapTrap.hpp -I ScavTrap.hpp -I  FragTrap.hpp
OBJ= $(SRC:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJ)
	$(CXX) $(CXXFLAGS) $(OBJ) $(HEADER) -o $(NAME)

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all

.SECONDARY: $(OBJ)
.PHONY: all clean fclean re
